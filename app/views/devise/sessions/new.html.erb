<section class='signIn-input-container'>  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class='signIn-navbar'>
      <%= link_to image_tag('back-arrow.svg', class: ''), flashes_path %>
        <p class= 'logIn-text'>LOGIN</p>
       <div class="logIn-btn">
        <%= f.submit "Log in" %>
      </div>
      </div>
  
    <div class='signUp-input-container'>
      <div class='signIn-input'>
        <div class="signIn-field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %><br />
        </div>
        <div class="signIn-field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %><br />
        </div>
      </div>
        
        <% end %>
        
      <div>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'logIn-forgot-password' %><br />
      <% end %>
      </div>
    </div>

</section>
