<section>
  
  <%= form_for(resource, as: resource_name, url: user_password_path, html: { method: :post }) do |f| %>
    
    <div class='signUp-navbar'>
    <%= link_to image_tag('back-arrow.svg', class: ''), flashes_path %>
    <p class= 'forgot-password-text'>FORGOT YOUR PASSWORD?</p>
  
     <div class="logIn-btn">
      <%= f.submit "Reset" %>
    </div>

    </div>

    
    <div class="signUp-input-container">
    <%= render "devise/shared/error_messages", resource: resource %>
      <div class='signUp-input'>
        <div class="signUp-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
        </div>
      </div>
    </div>

  <% end %>
</section>